lista = []

print("Digite os itens para sua lista de compras")
print("Quando terminar, digite 'sair'")

while True:
    item = input("Adicionar item: ").strip()
    
    if item.lower() == "sair":
        break
    elif item != "":
        if item not in lista:   # evita itens repetidos
            lista.append(item)
        else:
            print("Esse item já está na lista!")

lista.sort()

print("\n--- Sua Lista de Compras ---")
for i, produto in enumerate(lista, start=1):
    print(f"{i}. {produto}")
